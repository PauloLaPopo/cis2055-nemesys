@model Bloggy.ViewModels.EditInvestigationViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4">Are you sure you want to delete this investigation ?</h1>
    <form asp-action="Delete">
        <div class="form-group">
            <div class="col-md-5">
                <a asp-controller="Investigation" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
                <input type="submit" class="btn btn-primary" value="Delete" />
            </div>
        </div>
    </form>

