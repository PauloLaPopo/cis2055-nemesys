@model Bloggy.ViewModels.EditInvestigationViewModel

<h2>Edit Investigation</h2>

<form asp-action="Edit" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Id" type="hidden" class="form-control" />

    <div class="form-group">
        <label asp-for="Title" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <img src="@Model.ImageUrl" class="col-md-2" />
    </div>
    <div class="form-group">
        <label asp-for="ImageToUpload" class="col-md-2"></label>
        <div class="col-md-5">
            <input type="file" asp-for="ImageToUpload" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Update Investigation" />
            <a asp-controller="Investigation" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Back to Investigation</a>
            <a asp-controller="Investigation" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Delete</a>
        </div>
    </div>
</form>

@*Inject JQuery validation scripts in Layout*@
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}